<dialogs:BaseMetroDialog x:Class="Medical.AppLayer.Editors.CommonDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" 
                         Height="800"
             d:DesignHeight="300" d:DesignWidth="300" 
             BorderBrush="{DynamicResource AccentColorBrush}"
             BorderThickness="1">
    
    <Grid Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Button Content="Отмена" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"  Grid.Row="1" Margin="10,10,10,10" Click="Button_Cancel" Name="ButtonCancel" Visibility="Collapsed"/>
        <Button Content="Ok" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Grid.Row="1" Margin="10,10,10,10" Click="Button_Ok" Name="ButtonOk" Visibility="Collapsed"/>

    </Grid>
</dialogs:BaseMetroDialog>

